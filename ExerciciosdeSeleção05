// Faça um algoritmo que leia um número inteiro e mostre se ele é múltiplo de 3 e de 5 ao mesmo tempo.
package main

import "fmt"

func main() {
	var n int
	fmt.Print("Digite um número inteiro: ")
	fmt.Scanln(&n)
	if n%3 == 0 && n%5 == 0 {
		fmt.Println("O número é múltiplo de 3 e 5")
	} else {
		fmt.Println("O número não se encaixa no que foi pedido")
	}
}
