// Faça um algoritmo que leia um número inteiro entre 1 e 7 e mostre o dia da semana correspondente (1 = domingo, 2 = segunda-feira, etc.).
package main

import "fmt"

func main() {
	var n int
	fmt.Print("Digite um número de 1 a 7: ")
	fmt.Scanln(&n)
	if n == 1 {
		fmt.Println("Domingo")
	} else if n == 2 {
		fmt.Println("Segunda-Feira")
	} else if n == 3 {
		fmt.Println("Terça-Feira")
	} else if n == 4 {
		fmt.Println("Quarta-Feira")
	} else if n == 5 {
		fmt.Println("Quinta-Feira")
	} else if n == 6 {
		fmt.Println("Sexta-Feira")
	} else if n == 7 {
		fmt.Println("Sábado")
	} else {
		fmt.Println("Não se aplica. Por favor, digite um número de 1 a 7")
	}
}
